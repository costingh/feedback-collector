{
  "compilerOptions": {
    "target": "esnext", // Use a modern target
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Set to true for better type checking
    "noEmit": true, // No output files; Rollup will handle that
    "esModuleInterop": true,
    "module": "esnext", // Use ES modules
    "moduleResolution": "node", // Use Node-style module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Use the new JSX transform
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
